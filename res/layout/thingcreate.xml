<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <Button
        android:id="@+id/post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/thingEditContent"
        android:layout_marginBottom="5dp"
        android:text="Post" />

    <TextView
        android:id="@+id/thingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/post"
        android:text="Title"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/thingEditContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/thingContent"
        android:layout_alignBottom="@+id/thingContent"
        android:layout_toRightOf="@+id/thingContent"
        android:ems="10"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/thingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/chooseDate"
        android:layout_marginTop="49dp"
        android:text="Time"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/thingEditTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/post"
        android:layout_centerHorizontal="true"
        android:ems="10" />

    <TextView
        android:id="@+id/thingContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/chooseDate"
        android:layout_marginTop="51dp"
        android:text="Content"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <DatePicker
        android:id="@+id/chooseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thingEditTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:calendarViewShown="false" />

</RelativeLayout>
